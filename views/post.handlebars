<style>
    .box {
        background: rgba(255, 255, 255, 1);
        padding: 10px 20px;
        border-radius: 2px;
        box-shadow: 0px 0px 15px 5px rgba(0, 0, 0, 0.4);
    }
</style>

{{>header/header-block}}

<div class="container py-md-5 container--narrow">
    <form action="create-post" method="POST">
        <div class="form-group">
            <label for="post-title" class="text-muted mb-1">Title</label>
            <input required name="title" id="post-title" class="form-control form-control-lg form-control-title"
                type="text" placeholder="" autocomplete="off">
        </div>

        <div class="form-group">
            <label for="post-body" class="text-muted mb-1">Body Content</label>
            <textarea required name="body" id="post-body" class="body-content bigger-textarea form-control"
                type="text"></textarea>
        </div>

        <button class="btn btn-primary">Save New Post</button>
    </form>
</div>